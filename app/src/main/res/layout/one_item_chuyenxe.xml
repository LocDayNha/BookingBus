<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#53D4E4"
    android:orientation="vertical"
    android:padding="8dp">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/chuyenxeDiemdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOB1032"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_baseline_my_location_24"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/chuyenxeDiemden"
            android:textStyle="bold"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lập trình Android cơ bản"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="right"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/chuyenxeGio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:00 - 09:00"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/chuyenxeSoxe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROO1"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="right"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:id="@+id/chuyenxeGia"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnedit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_edit_24"></ImageButton>

        <ImageButton
            android:id="@+id/btndelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_delete_24"></ImageButton>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/btndatxe"
            android:layout_weight="1"
            android:text="Đặt xe">

        </Button>

    </LinearLayout>

</LinearLayout>