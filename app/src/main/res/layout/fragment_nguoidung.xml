<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="244dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/profile" />


        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatarinProFile"
        android:layout_width="186dp"
        android:layout_height="176dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/img_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#ECE9E9"
        android:orientation="vertical"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtNameinProFile"
                android:layout_width="match_parent"
                android:background="@drawable/edtlogin"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:drawableLeft="@drawable/ic_people"
                android:hint="Name"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtEmailinProFile"
                android:layout_width="match_parent"
                android:background="@drawable/edtlogin"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="5dp"
                android:drawableLeft="@drawable/ic_email"
                android:hint=" Email"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnProFileUpdate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn"
                android:text="Update Profile" />
            <Button
                android:id="@+id/btnProFileEditEmail"
                android:layout_width="300dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn"
                android:text="Edit Email" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>